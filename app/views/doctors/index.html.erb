<h3 class="page-header">
  Find a Doctor Today!
 </h3>

<div class="row">
	<% @doctors.each do |doctor| %>
		<div class="col-sm-6 col-md-4">
   			<div class="thumbnail">
				<%= link_to image_tag(doctor.image, width: "200"), doctor_url(doctor) %>
				<div class="caption">
					<h3><%= link_to doctor.last_name, doctor %></h3>
					<p><%= doctor.specialty %></p>
				</div>
			</div>
		</div>
	<% end %>
</div>


