<%= form_for @appointment do |form| %>
  
<div class="form-group">
    <%= form.label :doctor_id %>
    <%= form.collection_select(:doctor_id, Doctor.all, :id, :last_name) %>
  </div>

<div class="form-group">
    <%= form.label :test_id %>
    <%= form.collection_select(:test_id, Test.all, :id, :name) %>
  </div>

<div class="form-group">
    <%= form.label :date %>
    <%= form.date_field :date, class: "form-control" %>
  </div>

<div class="form-group">
    <%= form.label :time %>
    <%= form.time_field :time, class: "form-control" %>
  </div>

  <%= form.submit class: "btn btn-success" %>
<% end %>


