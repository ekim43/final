<%= form_for @appointment do |form| %>
  <div class="form-group">
    <%= form.label :patient_id %>
    <%= form.collection_select(:patient_id, Patient.all, :id, :last_name) %>
  </div>

<div class="form-group">
    <%= form.label :doctor_id %>
    <%= form.collection_select(:doctor_id, Doctor.all, :id, :last_name) %>
  </div>

<div class="form-group">
    <%= form.label :test_id %>
    <%= form.collection_select(:test_id, Test.all, :id, :name) %>
  </div>

  <%= form.button 'Create Appointment', class: "btn btn-success" %>
<% end %>


